/* pages/test/test.wxss */

page {
  font-size: 30rpx;
  letter-spacing: 2rpx;
  font-family: 'Microsoft YaHei';
}

.section {
  padding: 4rpx;
  /* display: none; */
}

.scroll-view {
  width: 100%;
  white-space: nowrap;
}

.scroll-view-item {
  border: 1rpx solid #eee;
  width: 30%;
  display: inline-block;
  height: 80rpx;
}

.scroll-view_Y {
  height: 60rpx;
  margin-top: 10rpx;
}

.lable label {
  display: flex;
}

.lable__icon {
  position: relative;
  margin-right: 10px;
  display: inline-block;
  vertical-align: middle;
  width: 18px;
  height: 18px;
  background: #fcfff4;
}

.lable__icon-checked {
  position: absolute;
  top: 3px;
  left: 3px;
  width: 12px;
  height: 12px;
  background: #1aad19;
}

.red {
  color: #ddd;
}
.bule {
  color: #ccc;
}
